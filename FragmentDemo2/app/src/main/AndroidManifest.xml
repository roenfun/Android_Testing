<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="xiazdong.me.fragmentdemo">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".BasicActivity" />
        <activity android:name=".CommunicateActivity" />
        <activity android:name=".Demo3Activity" />

        <provider
            android:name=".provider.DBProvider"
            android:authorities="xiazdong.me.fragmentdemo.provider.DBProvider" />

        <activity android:name=".DialogActivity" />
        <activity
            android:name=".LazyActivity"
            android:label="@string/title_activity_lazy"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>